<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="aprobacion_modificacion" model="ir.ui.view">
            <field name="name">aprobacion.modificacion</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm'][2]" position="after">
                    <button name="button_approve" type="object" string="Aprobar"
                            class="oe_highlight" groups="sales_team.group_sale_manager" attrs="{'invisible': [('state', 'not in', ['por_aprobar'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>