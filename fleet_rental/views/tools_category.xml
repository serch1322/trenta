<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="tools_category_form_view" model="ir.ui.view">
            <field name="name">tools_category.form</field>
            <field name="model">tools.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Modelo de Aditamento">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="activo"/>
                                <field name="amortizacion"/>
                                <field name="gasto"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="tools_category_tree_view" model="ir.ui.view">
            <field name="name">tools_category.tree</field>
            <field name="model">tools.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Modelo">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_tools_category" model="ir.actions.act_window">
            <field name="name">ModeloAdit</field>
            <field name="res_model">tools.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_tools_category" parent="menu_car_parent" name="Modelo Aditamento"
                  action="action_tools_category" sequence="6"/>
    </data>
</odoo>
