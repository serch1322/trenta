                                            <h3>Accesorio 4</h3>
                                            <field name="acces_4_r" widget="image" options="{&quot;size&quot;: [0, 120]}"/>
                                            <field name="accescom4_r"/>
                                            <h3>Accesorio 5</h3>
                                            <field name="acces_5_r" widget="image" options="{&quot;size&quot;: [0, 120]}"/>
                                            <field name="accescom5_r"/>
                                            <h3>Accesorio 6</h3>
                                            <field name="acces_6_r" widget="image" options="{&quot;size&quot;: [0, 120]}"/>
                                            <field name="accescom6_r"/>
                                        </div>
                                    </div>
                                </div>
                               <!-- <group class="text-center p-3">
                                    <group string="Entrega">
                                        <field name="acces_1" widget="image" options="{&quot;size&quot;: [0, 90]}"/>
                                        <field name="acces_2" widget="image" options="{&quot;size&quot;: [0, 90]}"/>
