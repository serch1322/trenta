<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="heredar_formato_contacto">
            <field name="name">heredar.formato.contacto</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="tipo_de_licencia" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                    <field name="vigencia" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                </field>
                <field name="function" position="after">
                    <field name="sexo" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                    <field name="edad" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                    <field name="tipo_sangre" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                    <field name="numero_emergencia" attrs="{'invisible': [('company_type', '==', 'company')]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="heredar_arbol_contacto">
            <field name="name">heredar.arbol.contacto</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="tipo_de_licencia"/>
                    <field name="vigencia"/>
                </field>
            </field>
        </record>
    </data>
</odoo>