<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="venta_vehiculo_form_view" model="ir.ui.view">
            <field name="name">venta.vehiculo.form.view</field>
            <field name="model">venta.vehiculo</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Venta Vehiculo">
                    <sheet>
                        <group>
                            <separator string="Venta de Vehiculos" colspan="4" />
                            <group>
                                <field name="name"/>
                                <field name="numero_bastidor"/>
                                <field name="venta"/>
                            </group>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="venta_vehiculo_tree_view">
            <field name="name">venta_vehiculo_tree_view.tree</field>
            <field name="model">venta.vehiculo</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Venta Vehiculos">
                    <field name="name"/>
                    <field name="numero_bastidor"/>
                    <field name="venta"/>
                </tree>
            </field>
        </record>

        <record id="action_venta_vehiculos" model="ir.actions.act_window">
            <field name="name">Venta_Vehiculos</field>
            <field name="res_model">venta.vehiculo</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_open': 1}</field>
        </record>

        <menuitem id="menu_venta_vehiculos" parent="fleet.fleet_vehicles" name="Venta Vehiculos"
                  action="action_venta_vehiculos" sequence="8"/>
    </data>
</odoo>