<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='view_sale_order_form' model='ir.ui.view' >
        <field name='name'>sale_order_line</field>
        <field name='model'>sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                    <field name="bordado" string="Bordado"/>
                    <field name="tinta" string="Tinta"/>
                    <field name="proceso_especial" string="Procesos Especiales"/>
                    <field name="precio_proceso_especial" string="Precio Proceso Especial"/>
            </xpath>
        </field>
    </record>

