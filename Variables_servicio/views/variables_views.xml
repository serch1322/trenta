<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="variables_form" model="ir.ui.view">
            <field name="name">variables.form</field>
            <field name="model">variables.procesos</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Variables" create="0" edit="1" delete="0">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="precio"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="variables_tree" model="ir.ui.view">
            <field name="name">variables.tree</field>
            <field name="model">variables.procesos</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Variables" create="0" delete="0">
                    <field name="name"/>
                    <field name="precio"/>
                </tree>
            </field>
        </record>

        <record id="action_variables" model="ir.actions.act_window">
            <field name="name">Variables</field>
            <field name="res_model">variables.procesos</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="variables" name="Variables" parent="sale.menu_sale_config" action="action_variables" groups="sales_team.group_sale_manager" sequence="4"/>

    </data>
</odoo>
