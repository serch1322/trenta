<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vamonos_de_compras" model="ir.ui.view">
        <field name="name">vamos.de.compras</field>
        <field name="model">de.compras</field>
        <field name="arch" type="xml">
            <form string="Compra">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="order"/>
                    </group>
                    <notebook>
                        <page string="Productos a Comprar">
                            <field name="order_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="qty_comprada"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_concepts"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="generar_orden_compra" type="object" string="Comprar" class="btn-primary"/>
                    <button string="Cerrar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generar_compra" model="ir.actions.act_window">
        <field name="name">GenerarCompra</field>
        <field name="res_model">de.compras</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
